@using Microsoft.AspNetCore.Identity
@using Blog_CSharp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">HELLO @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Posts" asp-action="Create" title="Create">New Post <i class="far fa-edit"></i></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">LOG OUT <i class="fas fa-sign-out-alt"></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">REGISTER
            <i class="fas fa-user-plus"></i></a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">LOGIN
            <i class="fas fa-sign-in-alt"></i></a></li>
    </ul>
}
